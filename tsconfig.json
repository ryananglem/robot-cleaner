{
    "compilerOptions": {
        "lib": [ "es5", "es6", "es7",
            "es2015", "es2016",
            "es2017", "es2018",
            "esnext" ],
        "target": "es2017",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}